<div class="rounded d-flex justify-content-center align-items-center" style="margin-top:8vh;">
  <form id="login-form" class="card form p-4 p-sm-3" style="color:#A37CF0; width:30em; height:28em;" action="" method="post">
    <h3 class="text-center" style="margin-top: 10px;">Login</h3>
      <div class="login-error-message">
        {{#if messages}}
          <p>{{messages.error}}</p>
        {{/if}}  
       </div>
       <div class="form-group">
         <i class="fa fa-user"></i>
         <label for="username">Username</label><br>
         <input type="text" name="username" id="username" class="form-control">
       </div>
        <div class="form-group">
          <i class="fa fa-lock"></i>
          <label for="password">Password</label><br>
          <input type="text" name="password" id="password" class="form-control">
        </div>
        <input type="submit" name="submit" class="btn btn-block btn-primary" style="background-color:#A37CF0; margin-top:30px;" value="Login">
        <br>
        <div id="register-link" class="text-right">
          <a href="/users/new" style="color:#A37CF0; margin-top:30px">Register account</a>
        </div>
  </form>
</div>