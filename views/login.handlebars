<div id="login">
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center top-margin">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12 login">
          <form id="login-form" class="form" action="" method="post">
            <h3 class="text-center text-white">Login</h3>
            <div class="form-group">
              <i class="fa fa-user text-white"></i>
              <label for="username" class="text-white">Username</label><br>
              <input type="text" name="username" id="username" class="form-control">
            </div>
            <div class="form-group">
              <i class="fa fa-lock text-white"></i>
              <label for="password" class="text-white">Password</label><br>
              <input type="text" name="password" id="password" class="form-control">
            </div>
            <div class="form-group">
              <input type="submit" name="submit" class="btn btn-white btn-md" style="color:#A37CF0" value="Login">
            </div>
            <div id="register-link" class="text-right">
              <a href="/registerUser" class="text-white">Register here</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>