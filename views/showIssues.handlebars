<section id="users" class="container">
    <h1 class="text-white">Issues from the {{projectName}}</h1>

    <form action="/issues/new" method="POST">
        <input type="hidden" name="projectID" value='{{projectID}}'>
        <input type="hidden" name="projectName" value='{{projectName}}'>
        <input type="submit" value="Add a new Issue">
    </form>


    <a href="/projects/{{projectID}}/addUser" class="btn btn-light pull-right">Add New User To Project</a>



    <div class="row row-cols-auto">
    {{#each issues}}
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
          <div class="card">
            <div class="card-header bg-white">
                <span class = "pull-left">
                <h5 class="card-title">
                    <i class="fa fa-flag"></i>
                    {{dataValues.issueTitle}}
                </h5>
                </span>
                <span class = "pull-right">
                        Urgency <span id="urgency-badge" class="badge badge-pill badge-info">{{dataValues.urgency}}</span>
                </span>
            </div>
            <div class="card-body bg-white">
            <p class="card-text">{{dataValues.description}}</p>
           </div>
            <div class="card-footer">
                <small class="pull-left text-white"> 
                    {{#when dataValues.status 'eq' 1}}
                        Status <span class="badge badge-pill badge-light">To Do</span>
                    {{/when}}
                    {{#when dataValues.status 'eq' 2}}
                        Status <span class="badge badge-pill badge-light">In Progress</span>
                    {{/when}}
                    {{#when dataValues.status 'eq' 3}}
                        Status <span class="badge badge-pill badge-light">Done</span>
                    {{/when}}
                </small>
                <small class="text-white pull-right">
                    <i class="fa fa-calendar-o"></i>
                    Date
                    {{dataValues.issueDate}}
                </small>
                <br>
                <h5 style="color: red">{{err}}</h5>
                <a href="/issues/{{dataValues.id}}/assignUser" class="btn btn-light pull-right">Assign</a>
                <a href="/issues/{{dataValues.id}}/editIssue" class="btn btn-light pull-right">Edit</a>
                <form action="/issues/{{dataValues.id}}?_method=delete" method="post">
                    <a href="#" class="btn btn-light pull-right mr-2" onclick="confirm('Are you sure you want to delete this issue?')?this.parentElement.submit():null;">Delete</a>
                </form>
            </div>
        </div>
    </div>
    {{else}}
        <p style="color: white;">No Issues to be displayed!</p>
    {{/each}}
    </div>
</section>

