

<section id="users" class="container">
    <h1 class="text-white">All Issues</h1>
    <div class="row row-cols-3 g-3">
    {{#each issues}}
        <div class="col">
          <div class="card">
            <div class="card-header bg-white">
                <span class = "pull-left">
                <h5 class="card-title">
                    <i class="fa fa-flag"></i>
                    {{dataValues.issueTitle}}
                </h5>
                </span>
                <span class = "pull-right">
                    <p>
                        urgency
                        {{dataValues.urgency}}
                    </p>
                </span>
            </div>
            <div class="card-body bg-white">
            <p class="card-text">{{dataValues.description}}</p>
           </div>
            <div class="card-footer">
                <small class="text-warning pull-left"> 
                    Status: {{dataValues.status}}
                </small>
                <small class="text-white pull-right">
                    <i class="fa fa-calendar-o"></i>
                    Date
                    {{dataValues.issueDate}}
                </small>


                <a href="/issues/{{dataValues.id}}/edit" class="btn btn-light mr-2">Edit</a>

                <form action="/issues/{{dataValues.id}}?_method=delete" method="post">
                    <a href="#" class="btn btn-light" onclick="confirm('Are you sure you want to delete this issue?')?this.parentElement.submit():null;">Delete</a>
                </form>


            </div>
        </div>
    </div>
    {{else}}
        <p style="color: white;">No Issues to be displayed!</p>
    {{/each}}
    </div>
</section>

