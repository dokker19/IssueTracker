<section id="users" class="container">
    <h1 class="text-white">My Issues</h1>
    <div class="row row-cols-auto">
    {{#each issues}}
        <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
          <div class="card" style="width:20em">
            <div class="card-header bg-white">
                <span class = "pull-left">
                <h5 class="card-title">
                    <i class="fa fa-flag"></i>
                    {{dataValues.issueTitle}}
                </h5>
                </span>
                <span class = "pull-right">
                  {{#when dataValues.status 'eq' 1}}
                    <h4 style="font-size:13px;">Low</h4>
                  {{/when}}
                  {{#when dataValues.status 'eq' 2}}
                    <span class="badge badge-pill badge-light bg-warning" style="font-size:13px;">Moderate</span>
                  {{/when}}
                  {{#when dataValues.status 'eq' 3}}
                    <h4 style="font-size:13px;">Alarming</h4>
                  {{/when}}
                  {{#when dataValues.status 'eq' 4}}
                    <span class="badge badge-pill badge-light bg-success" style="font-size:13px;">Critical</span>
                  {{/when}}
                  {{#when dataValues.status 'eq' 5}}
                    <span class="badge badge-pill badge-light bg-success" style="font-size:13px;">Highest</span>
                  {{/when}}
                </span>
            </div>
            <div class="card-body bg-white">
            <p class="card-text">{{dataValues.description}}</p>
           </div>
            <div class="card-footer">
                <small class="pull-left text-white"> 
                    {{#when dataValues.status 'eq' 1}}
                        <span class="badge badge-pill badge-light bg-info" style="font-size:13px;">To Do</span>
                    {{/when}}
                    {{#when dataValues.status 'eq' 2}}
                        <span class="badge badge-pill badge-light bg-warning" style="font-size:13px;">In Progress</span>
                    {{/when}}
                    {{#when dataValues.status 'eq' 3}}
                        <span class="badge badge-pill badge-light bg-success" style="font-size:13px;">Done</span>
                    {{/when}}
                </small>
                <small class="text-white pull-right">
                    <i class="fa fa-calendar-o"></i>
                    Date
                    {{dataValues.issueDate}}
                </small>
                <br>
                <h5 style="color: red">{{err}}</h5>
                <a href="/issues/{{dataValues.id}}/assignUser" class="btn btn-light pull-left"><i class="fa fa-user-plus"></i></a>
                <form action="/issues/{{dataValues.id}}?_method=delete" method="post">
                    <a href="#" class="btn btn-light pull-right ml-2" onclick="confirm('Are you sure you want to delete this issue?')?this.parentElement.submit():null;"><i class="fa fa-trash-o"></i></a>
                </form>
                <a href="/issues/{{dataValues.id}}/editIssue" class="btn btn-light pull-right"><i class="fa fa-pencil"></i></a>
            </div>
        </div>
    </div>
    {{else}}
        <p style="color: white;">No Issues to be displayed!</p>
    {{/each}}
    </div>
</section>

